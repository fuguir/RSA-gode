.container {
    padding: 30rpx;
  }
  
  .form-container {
    background-color: #fff;
    border-radius: 12rpx;
    padding: 20rpx;
  }
  
  .form-item {
    margin-bottom: 30rpx;
  }
  
  .label {
    display: block;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .input {
    width: 100%;
    height: 80rpx;
    border: 2rpx solid #ddd;
    border-radius: 8rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
  }
  
  .direction-group {
    display: flex;
    padding: 20rpx 0;
  }
  
  .radio-label {
    margin-right: 40rpx;
    font-size: 28rpx;
  }
  
  .location-info {
    background-color: #f8f8f8;
    padding: 20rpx;
    border-radius: 8rpx;
  }
  
  .location-detail {
    font-size: 28rpx;
    color: #666;
    display: flex;
    flex-direction: column;
    gap: 10rpx;
  }
  
  .button-group {
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
    gap: 20rpx;
  }
  
  .btn-cancel, .btn-confirm {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 8rpx;
    font-size: 28rpx;
  }
  
  .btn-cancel {
    background-color: #f5f5f5;
    color: #666;
  }
  
  .btn-confirm {
    background-color: #07c160;
    color: #fff;
  }