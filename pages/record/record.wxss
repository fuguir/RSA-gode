/* pages/record/record.wxss */

.container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background: #1a1a1a;
    padding: env(safe-area-inset-top) 0 env(safe-area-inset-bottom);
  }
  
  /* 状态栏 */
  .status-bar {
    padding: 24rpx;
    background: rgba(0, 0, 0, 0.2);
  }
  
  .status-group {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32rpx;
    padding: 16rpx 24rpx;
    background: rgba(42, 42, 42, 0.6);
    border-radius: 16rpx;
  }
  
  .status-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8rpx;
    padding: 8rpx 16rpx;
    border-radius: 12rpx;
    transition: all 0.3s;
    min-width: 180rpx;
    white-space: nowrap;
  }
  
  .status-item.active {
    background: rgba(76, 175, 80, 0.3);
    box-shadow: 0 0 10rpx rgba(76, 175, 80, 0.3);
    color: #fff;
    font-weight: 500;
  }
  
  /* 信息显示区 */
  .info-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 24rpx;
  }
  
  /* 桩号行样式 */
  .stake-row {
    display: flex;
    align-items: center;
    gap: 24rpx;
    margin-bottom: 24rpx;
    height: 120rpx;
  }
  
  .stake-panel {
    flex: 1;
    display: flex;
    align-items: center;
    padding: 0 32rpx;
    background: rgba(42, 42, 42, 0.8);
    border-radius: 24rpx;
    height: 100%;
    box-sizing: border-box;
  }
  
  .stake-value {
    font-size: 64rpx;
    font-weight: 500;
    color: #2196F3;
    margin-right: 24rpx;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  }
  
  .direction-indicator {
    font-size: 48rpx;
    color: #4CAF50;
  }
  
  .direction-indicator.down {
    color: #f44336;
  }
  
  .calibrate-btn {
    height: 100%;
    padding: 0 32rpx;
    border-radius: 24rpx;
    background: rgba(42, 42, 42, 0.8);
    color: #FFC107;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
  }
  
  /* 地图面板样式 */
  .map-panel {
    position: relative;
    width: 100%;
    height: 500rpx;
    background: rgba(42, 42, 42, 0.8);
    border-radius: 24rpx;
    overflow: hidden;
    margin-bottom: 24rpx;
  }
  
  .track-map {
    width: 100%;
    height: 100%;
  }
  
  /* 速度显示样式 */
  .speed-panel {
    position: absolute;
    top: 40rpx;
    left: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .speed-value {
    font-size: 96rpx;
    font-weight: 600;
    color: var(--text-color);
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
    line-height: 1;
  }
  
  .speed-unit {
    font-size: 24rpx;
    color: var(--text-color);
    opacity: 0.7;
    margin-top: 4rpx;
  }
  
  .accuracy-text {
    font-size: 20rpx;
    color: rgba(255, 255, 255, 0.4);
    margin-top: 4rpx;
    white-space: nowrap;
  }
  
  .map-loading {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(42, 42, 42, 0.9);
    color: white;
    font-size: 28rpx;
  }
  
  /* 统计面板 */
  .stats-panel {
    padding: 24rpx;
    background: rgba(42, 42, 42, 0.8);
    border-radius: 24rpx;
    margin-bottom: 24rpx;
    min-height: 160rpx;
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 16rpx;
  }
  
  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .stat-value {
    font-size: 36rpx;
    font-weight: bold;
    color: #FFC107;
  }
  
  .stat-label {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 4rpx;
  }
  
  /* 控制面板 */
  .control-panel {
    padding: 24rpx;
    display: flex;
    gap: 24rpx;
    align-items: center;
  }
  
  .connect-btn {
    flex: 1;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #2196F3;
    color: white;
    border-radius: 44rpx;
    font-size: 32rpx;
    border: none;
  }
  
  .direction-btn {
    height: 88rpx;
    padding: 0 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border-radius: 44rpx;
    font-size: 28rpx;
    border: none;
  }
  
  .record-btn {
    flex: 1;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
    background: #4CAF50;
    color: white;
    border-radius: 44rpx;
    font-size: 32rpx;
    border: none;
    transition: all 0.3s;
  }
  
  .record-btn.recording {
    background: #f44336;
    animation: pulse 2s infinite;
  }
  
  .record-icon {
    width: 24rpx;
    height: 24rpx;
    border-radius: 12rpx;
    background: white;
    transition: all 0.3s;
  }
  
  .record-btn.recording .record-icon {
    border-radius: 4rpx;
  }
  
  .disabled {
    opacity: 0.5;
    background: #666 !important;
  }
  
  .auto-save {
    display: flex;
    align-items: center;
    gap: 12rpx;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.6);
  }
  
  /* 按钮样式修正 */
  button {
    margin: 0;
    padding: 0;
  }
  
  button::after {
    border: none;
  }
  
  .calibrate-btn:active {
    opacity: 0.8;
  }
  
  /* 错误提示 */
  .error-toast {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 24rpx 32rpx;
    background: rgba(244, 67, 54, 0.9);
    color: white;
    border-radius: 16rpx;
    font-size: 28rpx;
    text-align: center;
    z-index: 900;
  }
  
  /* 加载遮罩 */
  .loading-mask {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 24rpx;
    z-index: 999;
  }
  
  .loading-spinner {
    width: 64rpx;
    height: 64rpx;
    border: 4rpx solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  
  /* 动画效果 */
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
  
  @keyframes pulse {
    50% { transform: scale(1.05); }
  }
  
  /* 页面容器 */
  .page-container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #212121;
    color: #E0E0E0;
  }
  
  /* 顶部状态区 */
  .status-section {
    height: 20vh;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 20rpx;
    background: rgba(26, 35, 126, 0.2);
    backdrop-filter: blur(10px);
  }
  
  .status-item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  }
  
  .status-icon {
    width: 64rpx;
    height: 64rpx;
    margin-right: 16rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }
  
  .status-icon.active {
    background: rgba(3, 169, 244, 0.2);
    box-shadow: 0 0 20rpx rgba(3, 169, 244, 0.3);
  }
  
  .status-info {
    display: flex;
    flex-direction: column;
  }
  
  .status-label {
    font-size: 24rpx;
    opacity: 0.7;
  }
  
  .status-value {
    font-size: 28rpx;
    font-weight: 500;
  }
  
  .status-detail {
    font-size: 20rpx;
    opacity: 0.5;
  }
  
  /* 中部地图区 */
  .map-section {
    height: 50vh;
    position: relative;
    background: #000;
    overflow: hidden;
    border-radius: 24rpx;
    margin: 20rpx;
  }
  
  .track-map {
    width: 100%;
    height: 100%;
  }
  
  .speed-panel {
    position: absolute;
    top: 40rpx;
    left: 40rpx;
    background: rgba(0, 0, 0, 0.7);
    padding: 20rpx 40rpx;
    border-radius: 16rpx;
    backdrop-filter: blur(10px);
  }
  
  .speed-value {
    font-size: 80rpx;
    font-weight: 600;
    color: #03A9F4;
    text-shadow: 0 0 20rpx rgba(3, 169, 244, 0.5);
  }
  
  .speed-unit {
    font-size: 24rpx;
    opacity: 0.7;
  }
  
  /* 底部控制区 */
  .control-section {
    height: 30vh;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    padding: 20rpx;
    background: rgba(26, 35, 126, 0.2);
    backdrop-filter: blur(10px);
  }
  
  .stake-display {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.05);
    padding: 20rpx 40rpx;
    border-radius: 16rpx;
  }
  
  .stake-value {
    font-size: 64rpx;
    font-weight: 600;
    color: #03A9F4;
    margin-right: 20rpx;
  }
  
  .direction-indicator {
    font-size: 48rpx;
    color: #4CAF50;
  }
  
  .direction-indicator.down {
    color: #f44336;
  }
  
  .control-buttons {
    display: flex;
    justify-content: center;
  }
  
  .record-button {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background: #f44336;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 0 30rpx rgba(244, 67, 54, 0.5);
    transition: all 0.3s ease;
  }
  
  .record-button.recording {
    background: #FF9800;
    box-shadow: 0 0 30rpx rgba(255, 152, 0, 0.5);
  }
  
  .function-buttons {
    display: flex;
    gap: 40rpx;
  }
  
  .function-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16rpx;
    transition: all 0.3s ease;
  }
  
  .function-btn:active {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(0.95);
  }
  
  .function-btn text {
    font-size: 24rpx;
    margin-top: 8rpx;
    opacity: 0.7;
  }
  
  /* 连接按钮样式 */
  .connect-button {
    display: flex;
    align-items: center;
    padding: 20rpx 40rpx;
    background: var(--primary-color);
    border-radius: 40rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }
  
  .connect-button .icon-bluetooth {
    margin-right: 12rpx;
  }
  
  .connect-button text {
    color: var(--text-color);
    font-size: 28rpx;
  }
  
  .connect-button:active {
    transform: scale(0.95);
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  }
  
  .connect-button.connected {
    background: var(--success-color);
  }