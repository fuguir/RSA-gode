/* 容器 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 顶部区域样式 */
.header {
  width: 92%;
  margin: 0 auto;
}

/* 搜索栏样式 */
.search-bar {
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 16rpx;
}

.search-input {
  height: 64rpx;
  font-size: 28rpx;
  color: #333;
}

/* 管理工具栏样式 */
.manage-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 0 24rpx;
}

.left-tools, .right-tools {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.checkbox-wrap {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.checkbox-icon {
  width: 36rpx;
  height: 36rpx;
}

.checkbox-wrap text {
  font-size: 28rpx;
  color: #666;
}

.batch-delete {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  opacity: 0.5;
}

.batch-delete.active {
  opacity: 1;
  color: #ff4d4f;
}

.delete-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 列表区域样式 */
.content {
  flex: 1;
  width: 92%;
  margin: 16rpx auto;
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.section-name {
  font-size: 28rpx;
  color: #333;
}

.item-right {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  padding: 8rpx;
}

.btn-icon {
  width: 100%;
  height: 100%;
}

/* 分页控制器样式 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
  padding: 16rpx 0;
  margin-top: 16rpx;
}

.page-btn {
  padding: 8rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.page-btn.disabled {
  opacity: 0.5;
}

/* 添加按钮样式 */
.create-btn {
  position: fixed;
  right: 48rpx;
  bottom: 48rpx;
  width: 96rpx;
  height: 96rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.create-btn .btn-icon {
  width: 48rpx;
  height: 48rpx;
}