/* 录制按钮图标 */
.record-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.recording .record-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 4rpx;
}

/* 激活状态的图标样式 */
.status-icon.active .icon-gps,
.status-icon.active .icon-bluetooth {
  filter: drop-shadow(0 0 8rpx var(--accent-color));
}
